{
    "manifest_version": 3,
    "name": "AIHCX 助手",
    "version": "1.0",
    "description": "AIHCX浏览器辅助工具 - 任务参数生成、任务管理与百度云API集成",
    
    "action": {
      "default_popup": "src/popup/index.html",
      "default_icon": "vite.svg"
    },
    
    "options_page": "src/options/index.html",
    
    "background": {
      "service_worker": "background/index.js",
      "type": "module"
    },
    
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content/index.js"]
      }
    ],
    
    "permissions": ["storage", "activeTab"],
    
    "web_accessible_resources": [
      {
        "resources": ["*.js"],
        "matches": ["<all_urls>"]
      }
    ]
  }